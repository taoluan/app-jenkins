pipeline {
  agent any

  stages {
    stage('SCM') {
      steps {
        checkout scm
      }
    }

    stage('SonarQube Analysis') {
      environment {
        MVN_HOME = tool 'Default Maven'
      }
      steps {
        withSonarQubeEnv('Scan') {
          sh "${MVN_HOME}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=jenkins -Dsonar.projectName='jenkins'"
        }
      }
    }
  }
}
