pipeline {
  agent any
  tools {
    maven 'Maven-3.6.3' // Use the correct tool name
  }
  stages {
    stage('SCM') {
      steps {
        checkout scm
      }
    }

    stage('SonarQube Analysis') {
      steps {
        withSonarQubeEnv('Scan') {
            sh "${tool name: 'Maven-3.6.3', type: 'hudson.tasks.Maven$MavenInstallation'}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=jenkins -Dsonar.projectName='jenkins'"
        }
      }
    }
  }
}
